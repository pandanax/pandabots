# PostgreSQL Configuration (Yandex Managed PostgreSQL)
# Получите эти данные из terraform output после создания кластера
DB_POSTGRESDB_HOST=c-xxxxxxxxx.rw.mdb.yandexcloud.net
DB_POSTGRESDB_PORT=6432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=CHANGE_ME_FROM_TERRAFORM_TFVARS

# n8n Configuration
N8N_HOST=n8n.mandala-app.online
TIMEZONE=Europe/Moscow

# ВАЖНО: Сгенерируйте криптографически стойкий ключ!
# Используйте: openssl rand -hex 32
N8N_ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# Логирование
N8N_LOG_LEVEL=info

# Email для Let's Encrypt (укажите ваш реальный email)
LETSENCRYPT_EMAIL=your-email@example.com
